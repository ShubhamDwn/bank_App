<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bank_demo.Pages.AddBeneficiaryPage"
             Title="Add Beneficiary"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Add New Beneficiary"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="BeneficiaryNameEntry"
                   Placeholder="Beneficiary Name"
                   FontSize="16" />

            <Entry x:Name="AccountNumberEntry"
                   Placeholder="Account Number"
                   Keyboard="Numeric"
                   FontSize="16" />

            <Entry x:Name="IFSCEntry"
                   Placeholder="IFSC Code"
                   FontSize="16" />

            <Button Text="Add Beneficiary"
                    Command="{Binding AddBeneficiaryCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="8"
                    FontSize="16"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:bank_demo.ViewModels.FeaturesPages"
             x:Class="bank_demo.Pages.AddBeneficiaryPage"
             Title="Add Beneficiary"
             x:DataType="viewModels:AddBeneficiaryViewModel">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <!-- Beneficiary Full Name -->
            <Entry 
                Placeholder="Full Name" 
                Keyboard="Text"
                Text="{Binding BeneficiaryName}" />

            <!-- Nickname -->
            <Entry 
                Placeholder="Nickname (Optional)" 
                Keyboard="Text"
                Text="{Binding BeneficiaryNickName}" />

            <!-- Beneficiary Account Number -->
            <Entry 
                Placeholder="Beneficiary Account Number" 
                Keyboard="Numeric"
                Text="{Binding AccountNumber}" />

            <!-- Confirm Account Number -->
            <Entry 
                Placeholder="Confirm Account Number"
                Keyboard="Numeric"
                Text="{Binding ConfirmAccountNumber}" />

            <!-- IFSC Code -->
            <Entry 
                Placeholder="IFSC Code" 
                Keyboard="Text"
                Text="{Binding IFSC}" />

            <!-- Mobile Number -->
            <Entry 
                Placeholder="Mobile Number" 
                Keyboard="Telephone"
                Text="{Binding MobileNo}" />

            <!-- Email -->
            <Entry 
                Placeholder="Email" 
                Keyboard="Email"
                Text="{Binding Email}" />

            <!-- Bank Name -->
            <Entry 
                Placeholder="Bank Name" 
                Keyboard="Text"
                Text="{Binding BankName}" />

            <!-- Branch Name -->
            <Entry 
                Placeholder="Branch Name" 
                Keyboard="Text"
                Text="{Binding BranchName}" />

            <!-- Add Beneficiary Button -->
            <Button 
                Text="Add Beneficiary"
                Command="{Binding AddCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

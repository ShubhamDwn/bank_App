<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:bank_demo.ViewModels.FeaturesPages"
             x:Class="bank_demo.Pages.BeneficiaryStatusPage"
             x:DataType="viewModels:BeneficiaryStatusPageViewModel"
             Title="Your Beneficiaries">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Beneficiary List"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Beneficiaries}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               CornerRadius="10"
                               Padding="15"
                               Margin="5"
                               HasShadow="True">

                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"
                                       TextColor="Black"/>
                                <Label Text="{Binding BankName}" FontSize="14" />
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:bank_demo.ViewModels.FeaturesPages"
             x:Class="bank_demo.Pages.StatementPage"
             Title="Account Statement">

    <ScrollView>
        
        <VerticalStackLayout Padding="20" Spacing="15">

            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                   IsRunning="{Binding IsLoading}" 
                   Color="DarkGray"
                   HeightRequest="50" />


            <Label Text="Select Account:" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding AccountTypes}" 
                    SelectedItem="{Binding SelectedAccountType}" />

            <Label Text="Select Time Period:" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding TimePeriodOptions}" 
                    SelectedItem="{Binding SelectedTimePeriod}" />

            <StackLayout Orientation="Horizontal" IsVisible="{Binding IsCustomDateRange}">
                <VerticalStackLayout>
                    <Label Text="From Date:" />
                    <DatePicker Date="{Binding FromDate}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="To Date:" />
                    <DatePicker Date="{Binding ToDate}" />
                </VerticalStackLayout>
            </StackLayout>

            <Button Text="View Statement" Command="{Binding LoadStatementCommand}" />

            <CollectionView ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Description}" FontAttributes="Bold" />
                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" FontSize="Small" />
                                <Label Text="{Binding Amount, StringFormat='â‚¹{0:F2}'}" 
                                       TextColor="{Binding Amount, Converter={StaticResource AmountColorConverter}}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Export to PDF" Command="{Binding ExportPdfCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bank_demo.MenuDrawerView"
             BackgroundColor="White"
             Padding="20"
             TranslationX="-300"
             WidthRequest="250"
             IsVisible="False">

    <VerticalStackLayout Spacing="20">

        <Label Text="Menu" FontAttributes="Bold" FontSize="24" />

        <Button Text="Profile" Clicked="OnProfileClicked"/>
        <Button Text="Transaction History" Clicked="OnTransactionHistoryClicked"/>
        <Button Text="Beneficiary Status" Clicked="OnBeneficiaryStatusClicked"/>
        <Button Text="Contact Support" Clicked="OnContactSupportClicked"/>
        <Button Text="Security Settings" Clicked="OnSecuritySettingsClicked"/>
        <Button Text="Terms &amp; Conditions" Clicked="OnTermsClicked"/>
        <Button Text="Logout" Clicked="OnLogoutClicked" TextColor="Red"/>

    </VerticalStackLayout>
</ContentView>
